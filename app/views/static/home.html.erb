
<section id="left">
    <h1>Swear Counter</h1>
    <% @people.each do |person| %>
        <div>
            <p><%= person.name %></p>
            <p><%= person.swears_today %></p>

            <%= form_for :person do |f| %>
                <%= f.hidden_field :id, value: person.id%>
                <%= f.hidden_field :action, value: "swears" %>
                <div class="field">
                  <%= f.submit value: "add" %>
                </div>
            <% end %>
        </div>
    <% end %>

</section>

